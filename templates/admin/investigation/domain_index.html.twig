{% extends 'admin/_base.html.twig' %}

{% block title %}Admin domains{% endblock %}

{% block body_admin %}

    <h1>{{ block('title') }}</h1>

    <h2>Domains</h2>

    <table>
        {% for domain in domains %}
            <tr>
                <td>{{ domain }}</td>
                <td>{{ domain.reportCount }}&times;</td>
                <td><a href="{{ path('investigation_domain_edit', {host: domain.host}) }}">Edit</a></td>
            </tr>
        {% endfor %}
    </table>

{% endblock %}
