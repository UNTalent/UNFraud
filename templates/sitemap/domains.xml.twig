{% extends "sitemap/_base.xml.twig" %}

{% block content %}

<url>
    <changefreq>weekly</changefreq>
    <priority>1</priority>
    <loc>{{ url('app_domain_recommend') }}</loc>
</url>
<url>
    <changefreq>weekly</changefreq>
    <priority>1</priority>
    <loc>{{ url('app_domain_search') }}</loc>
</url>
{% for domain in domains %}
    <url>
    <changefreq>weekly</changefreq>
    <priority>.9</priority>
    <loc>{{ url('app_domain_check',{host: domain.host}) }}</loc>
    </url>
{% endfor %}

<url>
    <changefreq>weekly</changefreq>
    <priority>1</priority>
    <loc>{{ url('post_index') }}</loc>
</url>
{% for post in posts %}
    <url>
        <changefreq>weekly</changefreq>
        <priority>.7</priority>
        <loc>{{ url('post_show',{id: post.id}) }}</loc>
    </url>
{% endfor %}

<url>
    <changefreq>weekly</changefreq>
    <priority>1</priority>
    <loc>{{ url('resource_index') }}</loc>
</url>
{% for collection in collections %}
    <url>
        <changefreq>weekly</changefreq>
        <priority>.8</priority>
        <loc>{{ url('resource_collection',{id: collection.id}) }}</loc>
    </url>
{% endfor %}

{% endblock %}
